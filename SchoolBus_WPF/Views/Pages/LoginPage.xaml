<Page x:Class="SchoolBus_WPF.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolBus_WPF.Views.Pages"
      xmlns:design="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:pageviewmodel="clr-namespace:SchoolBus_WPF.ViewModels.PageViewModels"
      
      mc:Ignorable="d"       d:MaxHeight="800" d:MaxWidth="500"
      Title="LoginPage" x:Name="login"  Width="400" >


    <StackPanel Background="#2B2D4F" >
        <TextBox Text="Back To" Foreground="WhiteSmoke" HorizontalAlignment="Center" Margin="0 50 0 0"
                 FontSize="35" BorderBrush="Transparent"/>
        <TextBox Text="School" Foreground="WhiteSmoke" HorizontalAlignment="Center" 
                 FontSize="45" FontFamily="showcard gothic" BorderBrush="Transparent"/>
        <Button Margin="0 30" Height="50" Width="200" Background="#F48D2E"
                BorderBrush="#F48D2E" Content="OPEN" FontSize="30"
                Command="{Binding StartPage}"  CommandParameter="{Binding ElementName=login}"/>

        <Image  Source="pack://application:,,,/StaticFields/bus.png"    Width="400" />

        
    </StackPanel>
</Page>
